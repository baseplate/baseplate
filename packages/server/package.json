    "watch": "tsc --build tsconfig.build.json --preserveWatchOutput --watch"
  },
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "@baseplate/core": "^0.5.0",
    "@types/dotenv": "^8.2.0",
    "dotenv": "^8.2.0"
  },
  "repository": "github:baseplate/baseplate",
