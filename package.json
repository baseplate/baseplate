{
  "name": "baseplate",
  "version": "1.0.0",
  "scripts": {
    "format": "eslint --ext js,jsx . && prettier --check '**/*.{js,jsx,md,html,css}'"
  },
  "devDependencies": {
    "@eduardoboucas/eslint-config": "^1.1.0",
    "@eduardoboucas/prettier-config": "^1.1.0",
    "eslint": "^6.7.0",
    "husky": "^3.1.0",
    "lerna": "^3.21.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md,html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {}
}
